<div class="page">
	<div class="header">
			{{#with header}}
			<header class="header__content">
				<div class="header__block">
					<img src="/svg/apple.svg" alt="Apple" class="header__icon">
					<nav class="header__block">
						{{#each links}}
						<a href="{{url}}" class="header__link">{{text}}</a>
						{{/each}}
					</nav>
				</div>
				<div class="header__block">
					<img src="/svg/search.svg" alt="Search" class="header__icon">
					<img src="/svg/profile.svg" alt="Profile" class="header__icon">
				</div>
			</header>
	</div>

	<div class="adv">
		<div class="adv__content">
				<div class="adv__block">
					<div class="adv__title">{{ad.title}}</div>
				</div>
				<div class="adv__block adv__link">
					<div class="adv__link">
						<a href="{{ad.link.url}}" class="adv__link">{{ad.link.text}}</a>						
					</div>
					<div class="adv__link">
						<a href="{{ad.link.url}}" class="adv__link"><img src="/svg/arrow-right.svg" alt="Shop iPhone"></a>						
					</div>
					
				</div>
	    </div>
	</div>
			{{/with}}

			{{#with iphone_pro}}
	<section class="product product-big product--iphone-pro product--dark product--top">
		<div class="product__content">
